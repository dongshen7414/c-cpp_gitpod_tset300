#include <iostream>

int main()
{
    int      i;
    double   f;
    float    f1;
    char     s[30];
    
    printf("please input a integer");
    scanf("%d",&i);
    printf("your input integer= %d\n" ,i );
     
    printf("please input a float number \n");
    scanf("%1f",&f);
    printf("your input float number = %1f\n",f);
    
    printf("please input a string \n");
    scanf("%s",s);
    printf("your input string = %s\n",s);
    
    
    return 0;
    
}
